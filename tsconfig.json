{
  "include": ["src", "src/components", "src/declaration.d.ts"],
  "exclude": [
    "node_modules",
    "src/develop-components/*",
    "./src/config/*",
    "./src/example/*",
    "./src/icons/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "./src/setupTests.ts"
  ],
  "compilerOptions": {
    // Default
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    // Added
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true
  }
}
